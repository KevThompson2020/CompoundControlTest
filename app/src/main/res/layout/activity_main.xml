<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/port_number_main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/port_number_appbar"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/three_maggie"
            app:expandedTitleMarginStart="16dp"
            app:expandedTitleMarginEnd="0dp"
            app:expandedTitleTextAppearance="@style/TextAppearance.Expanded"
            app:collapsedTitleTextAppearance="@style/TextAppearance.Collapsed"
            app:collapsedTitleGravity="left">

            <ImageView
                android:id="@+id/backdrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                android:src="@drawable/number"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/port_number_nested_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:sideSpinner="http://schemas.android.com/apk/res-auto"
            xmlns:hapiTextEntry="http://schemas.android.com/apk/res-auto"
            xmlns:hapiSubheader="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            tools:context="com.example.kev.compoundcontroltest.MainActivity">

            <!--#############################################-->
            <!--HEADER-->
            <com.example.kev.compoundcontroltest.compoundComponents.HapiSubHeader
                android:id="@+id/port_number_about_sub_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                hapiSubheader:title="About You"
                android:gravity="center"/>

            <!--FIRST NAME-->
            <com.example.kev.compoundcontroltest.compoundComponents.HapiTextEntry
                android:id="@+id/port_number_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                hapiTextEntry:hint="hello"
                hapiTextEntry:warning_text="error"
                android:gravity="center"/>

            <!--LAST NAME-->
            <com.example.kev.compoundcontroltest.compoundComponents.HapiTextEntry
                android:id="@+id/port_number_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"/>

            <!--DOB-->
            <com.example.kev.compoundcontroltest.compoundComponents.HapiTextEntry
                android:id="@+id/port_number_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"/>

            <!--POST CODE-->
            <com.example.kev.compoundcontroltest.compoundComponents.HapiTextEntry
                android:id="@+id/port_number_post_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"/>

            <!--EMAIL-->
            <com.example.kev.compoundcontroltest.compoundComponents.HapiTextEntry
                android:id="@+id/port_number_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"/>

            <!--CONFIRM EMAIL-->
            <com.example.kev.compoundcontroltest.compoundComponents.HapiTextEntry
                android:id="@+id/port_number_email_confirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"/>

            <!--#############################################-->
            <!--YOUR NUMBER HEADER-->
            <com.example.kev.compoundcontroltest.compoundComponents.HapiSubHeader
                android:id="@+id/port_number_about_sub_header_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                hapiSubheader:title="About Your Number"
                android:gravity="center"/>

            <!--YOUR NUMBER -->
            <com.example.kev.compoundcontroltest.compoundComponents.HapiTextEntry
                android:id="@+id/port_number_your_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"/>


            <!--THREE NUMBER-->
            <com.example.kev.compoundcontroltest.compoundComponents.HapiTextEntry
                android:id="@+id/port_number_three_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"/>

            <!--PAC CODE-->
            <com.example.kev.compoundcontroltest.compoundComponents.HapiTextEntry
                android:id="@+id/port_number_pac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"/>

            <!--#############################################-->
            <!--SUBMIT BUTTON-->
            <Button
                android:id="@+id/port_number_start_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lets do this"
                android:textColor="@color/three_white"
                android:background="@drawable/rounded_button_shape"
                android:enabled="true"
                android:backgroundTint="@color/three_maggie"
                />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
